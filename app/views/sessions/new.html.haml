%div#container
  %h1{align: 'right'} Log In
%div.container
  %div.row
    %div.col-xs_12
      %div#container
        =form_for(:session, :html =>{class: "form-horizontal", role: "form"}, url: login_path) do |f|
          %div.form-group
            %div.control-label.col-sm_2
              =f.label :email
            %div.col-sm_8
              =f.email_field :email, class: "form-control", placeholder: "Enter email", aoutofcus: true
          %div.form-group
            %div.control-label.col-sm_2
              =f.label :password
            %div.col-sm_8
              =f.password_field :password, class: "form-control", autocomplete: "off"
          %div.form-group
            %div.col-sm_10
              =f.submit 'Log In', class: 'btn btn-primary btn-lg'
          %div.col-xs_4.col-xs_offset_4
            =link_to "[ Cancel and return to Articles listing ]" , articles_path
