.container
  %h1{align: "center"}Create new category

=render 'shared/errors', obj: @category
%div.container
  %div.row
    %div.col-xs_12
      %div#container
        =form_for @category do |f|
          %div.form-group
            %div.control-label.col-sm_2
              =f.label :name
            %div.col-sm_8
              =f.text_field :name, class: "form-control", placeholder: "Category Name", aoutofcus: true
          %div.form-group
            %div.col-sm_10
              =f.submit "Create Category", class: 'btn btn-primary btn-lg'
          %div.col-xs_4.col-xs_offset_4
            =link_to "[ Cancel and return to Articles listing ]" , articles_path
