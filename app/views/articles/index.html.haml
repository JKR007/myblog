%h1 List of all articles
%p #{link_to "Create a new article", new_article_path}

%table
  %tr
    %th Title
    %th Description

  -@articles.each do |article|
    %tr
      %td #{article.title}
      %td #{article.description}
      -# in Edit and Show, article must be passed as an parameter because we need an spcific article to be edited or shown!
      %td #{link_to "Edit", edit_article_path(article)}
      %td #{link_to "Show", article_path(article)}
      %td #{link_to "Delete", article_path(article), method: :delete, data: {confirm: "Are you sure?"}}

%br

=link_to "Back to Home", root_path
