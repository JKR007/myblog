=render 'shared/errors', obj: @user
%div.container
  %div.row
    %div.col-xs_12
      %div#container
        =form_for @user do |f|
          %div.form-group
            %div.control-label.col-sm_2
              =f.label :username
            %div.col-sm_8
              =f.text_field :username, class: "form-control", placeholder: "Enter username", aoutofcus: true
          %div.form-group
            %div.control-label.col-sm_2
              =f.label :email
            %div.col-sm_8
              =f.email_field :email, class: "form-control", placeholder: "Enter email", aoutofcus: true
          %div.form-group
            %div.control-label.col-sm_2
              =f.label :password
            %div.col-sm_8
              =f.password_field :password, class: "form-control", placeholder: "Enter password", aoutofcus: true
          %div.form-group
            %div.col-sm_10
              =f.submit(@user.new_record? ? 'Sign Up' : 'Edit Account', class: 'btn btn-primary btn-lg')
          %div.col-xs_4.col-xs_offset_4
            =link_to "[ Cancel and return to Articles listing ]" , articles_path
