%div.container
  %div.row
    %div.col-xs_10.col-xs_offset_2
      -flash.each do |name, msg|
        %div{:class => "alert alert-#{"#{name}"}"}
          %a{:href => "#", :class => "close", :data_dismiss => "alert"}
            &#215;
          =content_tag :div, msg, :id => "flash_#{"#{name}"}" if msg.is_a?(String)
